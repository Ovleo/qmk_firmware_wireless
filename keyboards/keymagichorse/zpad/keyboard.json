{
    "keyboard_name": "zpad",
    "manufacturer": "keymagichorse",
    "processor": "STM32F411",
    "bootloader": "stm32-dfu",
    "usb": {
        "vid": "0xBB00",
        "pid": "0xBB02",
        "device_version": "1.0.0"
    },
    "features": {
        "bootmagic": true,
        "command": false,
        "console": false,
        "extrakey": true,
        "mousekey": true,
        "bluetooth": true,
        "nkro": true,
        "rgblight": true
    },
    "bluetooth":{
        "driver":"bhq"
    },
    "RGB_MATRIX": {
        "animations": {
            "alphas_mods": true,
            "breathing": true,
            "cycle_all": true,
            "cycle_left_right": true,
            "cycle_up_down": true,
            "solid_reactive_multinexus": true,
            "solid_reactive_multiwide": true,
            "typing_heatmap": true
        },
        "driver": "WS2812"
    },
    "ws2812": {
        "pin": "B6"
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 3], "x": 3, "y": 0 , "h": 2},

                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1},
                {"matrix": [1, 2], "x": 2, "y": 1},
                {"matrix": [1, 3], "x": 3, "y": 1},

                {"matrix": [2, 0], "x": 0, "y": 2},
                {"matrix": [2, 1], "x": 1, "y": 2},
                {"matrix": [2, 2], "x": 2, "y": 2},
                {"matrix": [2, 3], "x": 3, "y": 2 , "h": 2},

                {"matrix": [3, 0], "x": 0, "y": 3},
                {"matrix": [3, 1], "x": 1, "y": 3},
                {"matrix": [3, 2], "x": 2, "y": 3},

                {"matrix": [4, 0], "x": 0, "y": 4},
                {"matrix": [4, 1], "x": 1, "y": 4},
                {"matrix": [4, 2], "x": 2, "y": 4},
                {"matrix": [4, 3], "x": 3, "y": 4, "h": 2},

                {"matrix": [5, 0], "x": 0, "y": 4, "w": 2},
                {"matrix": [5, 2], "x": 2, "y": 4}
            ]
        }
    }
}
